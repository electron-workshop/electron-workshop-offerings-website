{# Top section cards with cardType: "top" #}
<section class="mb-4">
  <div class="row">
    {% for card in homeCards %} {% if card.cardType == "top" %}
    <div class="col-12 col-md-6">
      <p class="fs-5 fw-semibold mb-3">{{ card.title }}</p>
      <p class="lead text-secondary">{{ card.text }}</p>

      {% if card.href and card.button %}
      <a href="{{ card.href }}" class="btn btn-primary">{{ card.button }}</a>
      {% endif %}
    </div>
    {% endif %} {% endfor %}
  </div>
</section>
{# Regular cards section for whatsOnEcosystem or other types #}
<section class="mt-4">

  <h1 class="fs-2 fw-semibold mb-3">What's on In the Ecosystem</h1>
  <div class="row g-4">
    {% for card in homeCards %} {% if card.cardType == "whatsOnEcosystem" %}
    <div class="col-12 col-md-4">
      <div
        class="card h-100 border-primary border-opacity-25 shadow-sm hover-card"
      >
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between mb-2">
            <h2 class="h4 mb-0">{{ card.title }}</h2>
            {% if card.icon %}<i class="bi {{ card.icon }} fs-3"></i>{% endif %}
          </div>
          <p class="mb-4">{{ card.text }}</p>
          {% if card.href and card.button %}
          <a href="{{ card.href }}" class="btn btn-primary"
            >{{ card.button }}</a
          >
          {% endif %}
        </div>
      </div>
    </div>
    {% endif %} {% endfor %}
  </div>
</section>
